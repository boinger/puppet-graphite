[local heartbeat]
pattern = local.heartbeat.*
retentions = 1m:1h

[watcher txn timer]
pattern = .*\.timers\.service\.watcher\.transaction\..*
retentions = 5m:7d,1h:30d,1d:2y

[rabbitmq tmp queue garbage]
pattern = stats\.rabbitmq\.queue.*
retentions = 600s:100d

[elasticsearch]
pattern = stats\.elasticsearch\..*
retentions = 30s:24h,60s:2d,300s:60d

[default]
pattern = .*
retentions = <%= @gr_default_retentions %>
